{
  "name": "market-pulse-bot",
  "version": "1.0.0",
  "description": "Real-time financial alert system delivered through Telegram bot",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit --strict",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "job:fetch-prices": "tsx src/jobs/fetch-prices.ts",
    "job:calculate-prices": "tsx src/jobs/calculate-prices.ts",
    "job:monitor-alerts": "tsx src/jobs/monitor-alerts.ts",
    "job:generate-reports": "tsx src/jobs/generate-reports.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate": "yarn typecheck && yarn lint && yarn format:check"
  },
  "keywords": [
    "telegram",
    "bot",
    "financial",
    "alerts",
    "grammyjs"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "yarn@4.9.1",
  "dependencies": {
    "@grammyjs/conversations": "^2.1.1",
    "@grammyjs/i18n": "^1.1.2",
    "@grammyjs/menu": "^1.3.1",
    "@prisma/client": "6.8.0",
    "better-auth": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "grammy": "^1.38.4",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-check": "^4.4.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "prisma": "6.8.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
